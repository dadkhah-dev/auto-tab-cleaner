{
  "manifest_version": 3,
  "name": "Auto Tab Cleaner",
  "description": "Automatically closes old tabs, with whitelist, notifications, and a stats dashboard.",
  "version": "2.0",
  "permissions": [
    "tabs",
    "storage",
    "notifications", 
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "dashboard.html",
    "default_icon": "icons/icon128.png"
  },
  "options_page": "options.html",
  "icons": { 
    "128": "icons/icon128.png"
  }
}
